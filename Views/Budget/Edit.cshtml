@model samis.Models.Budget

<h4>Budget</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="budgetId" />
            <div class="form-group">
                <label asp-for="activityId" class="control-label"></label>
                <select asp-for="activityId" class="form-control" asp-items="ViewBag.activityId"></select>
                <span asp-validation-for="activityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="budgetDescriptionId" class="control-label"></label>
                <select asp-for="budgetDescriptionId" class="form-control"
                        asp-items="ViewBag.budgetDescriptionId"></select>
                <span asp-validation-for="budgetDescriptionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="budgetStatusId" class="control-label"></label>
                <select asp-for="budgetStatusId" class="form-control" asp-items="ViewBag.budgetStatusId"></select>
                <span asp-validation-for="budgetStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="amount" class="control-label"></label>
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

