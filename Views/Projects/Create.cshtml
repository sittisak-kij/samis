@{
ViewData["Title"] = "Create Project";
}

<div class="flex-container">
    <div style="flex-grow: 1">
        <h4><b>CREATE PROJECT</b></h4>
    </div>
    <div style="flex-grow: 1">
        <h6 style="text-align: right">VINCENT MARY SCHOOL OF SCIENCE AND TECHNOLOGY <img src="~/img/ic_vms.png"
                width="30" height="30" /></h6>
    </div>
</div>

@model samis.Models.ActivityInformation

@{
ViewData["Title"] = "Details";
}

<div class="flex-container" style="margin-top: 16px">
    <div style="flex-grow: 1">
        <h3><b><input id="projectName" class="form-control" type="text" style="width: 80%; height: 50%"
                    placeholder="PROJECT NAME" /></b>
        </h3>
    </div>
    <div style="flex-grow: 1">
        <h6 style="text-align: right">S2019090096</h6>
    </div>
</div>

<table style="width: 100%; margin-top: 16px">
    <tr>
        <td><b>Project Type: </b></td>
        <td>
            <select id="projectType" class="form-control" style="width: 80%;">
                <option value="1" selected>Academic</option>
                <option value="2">Arts & Culture</option>
                <option value="3">Ideal Graduate</option>
                <option value="4">Procurement</option>
            </select>
        </td>
        <td><b>Semester: </b></td>
        <td colspan="2">
            <select id="semester" class="form-control">
                <option selected>2/2018</option>
                <option>3/2018</option>
                <option>1/2019</option>
            </select>
        </td>
    </tr>
    <tr>
        <td><b>Project Level: </b></td>
        <td>
            <select id="projectLevel" class="form-control" style="width: 80%;">
                <option selected>Institutional</option>
                <option>Inter-collegiate</option>
                <option>Regional</option>
                <option>National</option>
            </select>
        </td>
        <td><b>Started Date: </b></td>
        <td colspan="2"><input id="startDate" class="form-control" type="date" /></td>
    </tr>
    <tr>
        <td><b>Venue: </b></td>
        <td><input id="venue" class="form-control" type="text" style="width: 80%" /></td>
        <td><b>Ended Date: </b></td>
        <td colspan="2"><input id="endedDate" class="form-control" type="date" /></td>
    </tr>
    <tr>
        <td><b>Advisor: </b></td>
        <td>A. Sakhon Ounla</td>
        <td><b>Participants: </b></td>
        <td><input id="participants" class="form-control" type="text" style="width: 90%" /></td>
        <td style="width: 16px">Persons</td>
    </tr>
</table>

<table id="revenueTable" style="width: 100%; margin-top: 32px">
