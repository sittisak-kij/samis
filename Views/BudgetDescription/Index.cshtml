@model IEnumerable<samis.Models.BudgetDescription>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.budgetType)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.budgetType.budgetTypeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.budgetDescriptionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.budgetDescriptionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.budgetDescriptionId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>