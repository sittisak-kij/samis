@model IEnumerable<samis.Models.StatusType>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.statusTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.statusTypeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.statusTypeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.statusTypeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.statusTypeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
